generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Costumers {
  id      String @id @default(uuid())
  name    String
  surname String
  email   String @unique
  cpf     String @unique
  phone   String
  address String
  state   String
  cep     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  animals Animal[]
}

model Animal {
  id         String   @id @default(uuid())
  name       String
  specieId   String
  breedId    String
  age        Int
  gender     String
  weight     Float
  bithdate   DateTime
  neutered   Boolean
  vaccinated Boolean
  ownerId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner  Costumers    @relation(fields: [ownerId], references: [id])
  specie AnimalSpecie @relation(fields: [specieId], references: [id])
  breed  AnimalBreed  @relation(fields: [breedId], references: [id])
}

model AnimalSpecie {
  id     String @id @default(uuid())
  specie String @unique

  createdAt DateTime @updatedAt

  AnimalBreeds AnimalBreed[]
  Animal       Animal[]
}

model AnimalBreed {
  id       String       @id @default(uuid())
  breed    String       @unique
  specieId String
  specie   AnimalSpecie @relation(fields: [specieId], references: [id])

  createdAt DateTime @default(now())
  Animal    Animal[]
}

model Employees {
  id           String @id @default(uuid())
  name         String
  surname      String
  email        String @unique
  phone_number String
  Adress       String
  State        String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
